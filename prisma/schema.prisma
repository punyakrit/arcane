generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["arcane"]
}

model WorkSpace {
  id             String          @id @unique @default(uuid())
  createdAt      DateTime        @default(now())
  workSpaceOwner String          @default(uuid())
  title          String
  iconId         String?
  inTrash        String?
  logoUrl        String?
  bannerUrl      String?
  data           String?
  Collaborators  Collaborators[]
  folders        Folders[]

  @@schema("arcane")
}

model Collaborators {
  id          String    @id @default(uuid())
  userId      String
  createdAt   DateTime  @default(now())
  workSpaceId String
  workSpace   WorkSpace @relation(fields: [workSpaceId], references: [id], onDelete: Cascade)

  @@schema("arcane")
}

model Folders {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  title       String
  iconId      String?
  data        String?
  inTrash     String?
  bannerUrl   String?
  workSpaceId String
  files       Files[]
  workSpace   WorkSpace @relation(fields: [workSpaceId], references: [id], onDelete: Cascade)

  @@schema("arcane")
}

model Files {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  title     String
  iconId    String?
  data      String?
  inTrash   String?
  bannerUrl String?
  folderId  String
  folder    Folders  @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@schema("arcane")
}

